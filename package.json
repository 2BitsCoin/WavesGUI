{
  "name": "waves-lite-client",
  "version": "1.0.0-test",
  "description": "A lite client for the Waves platform",
  "repository": {
    "type": "git",
    "url": "https://github.com/wavesplatform/WavesGUI.git"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/connect": "^3.4.30",
    "@types/fs-extra": "^3.0.3",
    "@types/gulp": "^4.0.4",
    "@types/gulp-angular-templatecache": "^2.0.3",
    "@types/gulp-babel": "^6.1.29",
    "@types/gulp-concat": "0.0.30",
    "@types/gulp-copy": "0.0.3",
    "@types/gulp-htmlmin": "^1.3.30",
    "@types/gulp-rename": "0.0.32",
    "@types/gulp-uglify": "0.0.30",
    "@types/handlebars": "^4.0.35",
    "@types/jasmine": "^2.5.53",
    "@types/jquery": "^3.2.12",
    "@types/node": "^8.0.11",
    "@types/serve-static": "^1.7.31",
    "autoprefixer": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "connect": "^3.6.2",
    "electron": "^1.6.8",
    "electron-builder": "^17.5.0",
    "electron-packager": "^8.7.0",
    "electron-prebuilt": "^1.4.13",
    "eslint": "^4.2.0",
    "fs-extra": "^4.0.0",
    "gulp": "^3.9.1",
    "gulp-angular-templatecache": "^2.0.0",
    "gulp-babel": "^6.1.2",
    "gulp-concat": "^2.6.1",
    "gulp-copy": "^1.0.0",
    "gulp-htmlmin": "^3.0.0",
    "gulp-rename": "^1.2.2",
    "gulp-s3": "^0.11.0",
    "gulp-uglify": "^3.0.0",
    "gulp-zip": "^4.0.0",
    "handlebars": "^4.0.10",
    "jasmine-core": "^2.6.4",
    "karma": "^1.7.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.1",
    "karma-jasmine": "^1.1.0",
    "less": "^2.7.2",
    "pixrem": "^4.0.1",
    "postcss-cli": "^4.1.0",
    "serve-static": "^1.12.3",
    "typescript": "^2.4.1",
    "uglifycss": "0.0.27"
  },
  "scripts": {
    "postinstall": "sh scripts/postinstall.sh",
    "preversion": "sh scripts/preversion.sh",
    "postversion": "sh scripts/postversion.sh",
    "watchts": "sh scripts/watch-typescript.sh",
    "lessc": "sh scripts/lessc",
    "test": "node_modules/.bin/tsc -p ./ && node_modules/.bin/karma start karma.conf.js",
    "release": "sh scripts/release.sh",
    "build-local": "node_modules/.bin/gulp build-local",
    "build": "node_modules/.bin/gulp all"
  },
  "build": {
    "appId": "com.wavesplatform.client.lite",
    "copyright": "Waves Platform",
    "productName": "Waves Lite Client",
    "files": "**/*",
    "asar": true,
    "compression": "normal",
    "npmRebuild": false,
    "npmSkipBuildFromSource": true,
    "directories": {
      "buildResources": "src/desktop/resources"
    },
    "artifactName": "${productName}[${env.WAVES_CONFIGURATION}]-${version}-${os}.${ext}",
    "linux": {
      "category": "Utility",
      "target": [
        "deb",
        "zip"
      ],
      "executableName": "waves-lite-client",
      "icon": "src/desktop/resources"
    },
    "mac": {
      "category": "public.app-category.finance",
      "target": [
        "dmg"
      ],
      "icon": "src/desktop/resources/icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "legalTrademarks": "Waves Platform",
      "icon": "src/desktop/resources/icon.ico"
    },
    "nsis": {
      "artifactName": "waves-lite-client[${env.WAVES_CONFIGURATION}]-setup-${version}.${ext}"
    },
    "dmg": {
      "icon": null,
      "window": {
        "x": 400,
        "y": 100,
        "width": 540,
        "height": 280
      }
    }
  },
  "dependencies": {
    "@uirouter/angularjs": "^1.0.6",
    "angular": "^1.6.5",
    "angular-animate": "^1.6.5",
    "angular-aria": "^1.6.5",
    "angular-material": "^1.1.4",
    "angular-messages": "^1.6.5",
    "angular-ui-router": "^1.0.3",
    "i18next": "^9.0.0",
    "i18next-browser-languagedetector": "^2.0.0",
    "i18next-xhr-backend": "^1.4.2",
    "identicon": "^2.1.1",
    "jquery": "^3.2.1",
    "ng-i18next": "^1.0.5",
    "ts-utils": "^4.0.0",
    "waves-api": "^0.2.3",
    "worker-wrapper": "^1.0.0"
  }
}
